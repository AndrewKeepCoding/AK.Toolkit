<?xml version="1.0" encoding="utf-8" ?>
<local:TextHighlightablePage
    x:Class="AK.Toolkit.WinUI3.TextBlockExSampleApp.SubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AK.Toolkit.WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AK.Toolkit.WinUI3.TextBlockExSampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisPage"
    mc:Ignorable="d">

    <Grid>
        <controls:TextBlockEx
            HighlightingText="{x:Bind HighlightingText, Mode=OneWay}"
            Text="This is the sub page." />
    </Grid>

</local:TextHighlightablePage>
