<Page
    x:Class="AK.Toolkit.Samples.WinUI3.ScrollBarExtensions.DataGridsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AK.Toolkit.Samples.WinUI3.ScrollBarExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:AK.Toolkit.WinUI3"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid
        Grid.Row="1"
        Margin="10"
        ColumnDefinitions="*,Auto"
        ColumnSpacing="30"
        RowDefinitions="*,*,*"
        RowSpacing="30">
        <!--  Empty List  -->
        <Grid
            Grid.Row="0"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="30"
            RowDefinitions="Auto,*">
            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Empty List" />
            <!--  False  -->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: False" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        Grid.Row="1"
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="False"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="False"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind EmptyList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  True  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: True" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="True"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="True"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind EmptyList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  Toggle  -->
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: Binding" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="{x:Bind HorizontalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="{x:Bind VerticalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind EmptyList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
        </Grid>
        <!--  Small List  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="30"
            RowDefinitions="Auto,*">
            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Small List" />
            <!--  False  -->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                RowDefinitions="Auto,*">
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="KeepExpanded: False" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="False"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="False"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind SmallList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  True  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: True" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="True"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="True"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind SmallList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  Toggle  -->
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: Binding" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="{x:Bind HorizontalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="{x:Bind VerticalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind SmallList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
        </Grid>
        <!--  Large List  -->
        <Grid
            Grid.Row="2"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="30"
            RowDefinitions="Auto,*">
            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Large List" />
            <!--  False  -->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: False" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="False"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="False"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind LargeList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  True  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: True" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="True"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="True"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind LargeList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
            <!--  Toggle  -->
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="KeepExpanded: Binding" />
                <Grid Grid.Row="1" Style="{StaticResource GridBoxStyle}">
                    <controls:DataGrid
                        toolkit:ScrollBarExtensions.KeepHorizontalExpanded="{x:Bind HorizontalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        toolkit:ScrollBarExtensions.KeepVerticalExpanded="{x:Bind VerticalScrollBarsKeepExpandedSwitch.IsOn, Mode=OneWay}"
                        HorizontalScrollBarVisibility="Visible"
                        ItemsSource="{x:Bind LargeList}"
                        VerticalScrollBarVisibility="Visible" />
                </Grid>
            </Grid>
        </Grid>
        <!--  Switches  -->
        <StackPanel
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,50,0,0"
            Spacing="10">
            <ToggleSwitch
                x:Name="VerticalScrollBarsKeepExpandedSwitch"
                Header="Vertical ScrollBar"
                IsOn="False"
                OffContent="KeepExpanded"
                OnContent="KeepExpanded" />
            <ToggleSwitch
                x:Name="HorizontalScrollBarsKeepExpandedSwitch"
                Header="Horizontal ScrollBar"
                IsOn="False"
                OffContent="KeepExpanded"
                OnContent="KeepExpanded" />
            <Button Click="AddItemButton_Click" Content="Add item" />
            <Button Click="RemoveItemButton_Click" Content="Remove item" />
        </StackPanel>
    </Grid>
</Page>
