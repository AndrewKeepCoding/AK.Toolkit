<Page
    x:Class="AK.Toolkit.Samples.Uwp.Localization.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:AK.Toolkit.Uwp.Localization"
    xmlns:local="using:AK.Toolkit.Samples.Uwp.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel
        x:Name="Root"
        Orientation="Vertical"
        Spacing="20">

        <TextBlock
            l:Localizer.Uid="MainPageTitleTextBlock"
            FontSize="20"
            FontWeight="Bold" />

        <TextBox l:Localizer.Uid="TextBox" />

        <Button l:Localizer.Uid="Button" />

        <CheckBox l:Localizer.Uid="CheckBox" />

        <ComboBox l:Localizer.Uid="ComboBox" SelectedIndex="0">
            <TextBlock l:Localizer.Uid="ComboBoxItem" />
        </ComboBox>

        <DropDownButton l:Localizer.Uid="DropDownButton">
            <TextBlock l:Localizer.Uid="DropDownButtonItem" />
        </DropDownButton>

        <HyperlinkButton l:Localizer.Uid="HyperlinkButton" />

        <RadioButton l:Localizer.Uid="RadioButton" />

        <RatingControl l:Localizer.Uid="RatingControl" />

        <ToggleSwitch l:Localizer.Uid="ToggleSwitch" />
    </StackPanel>
</Page>
